<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Quantum\DBO\Player" table="player">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="job" type="integer" />
        <field name="playtime" type="integer" />
        <field name="level" type="integer" />
        <field name="exp" type="integer" />
        <field name="gold" type="integer" />
        <field name="last_play" type="datetime" />

    </entity>

</doctrine-mapping>