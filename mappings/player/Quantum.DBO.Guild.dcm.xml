<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Quantum\DBO\Guild" table="guild">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="master" type="integer" />
        <field name="level" type="integer" />
        <field name="win" type="integer" />
        <field name="draw" type="integer" />
        <field name="loss" type="integer" />
        <field name="ladder_point" type="integer" />

    </entity>

</doctrine-mapping>