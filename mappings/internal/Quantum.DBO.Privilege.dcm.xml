<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Quantum\DBO\Privilege" table="privileges">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="100" />
        <field name="technicalName" type="string" length="100" nullable="true" />
        <field name="description" type="string" length="100" nullable="true" />
        <field name="category" type="string" length="100" nullable="true" />
    </entity>

</doctrine-mapping>