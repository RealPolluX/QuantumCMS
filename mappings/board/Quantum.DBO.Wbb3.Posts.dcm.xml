<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Quantum\DBO\Wbb3\Posts" table="wbb1_1_post">
        <id name="postID" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="threadID" type="integer" />
        <field name="userID" type="integer" />
        <field name="username" type="string" length="50" />
        <field name="subject" type="string" length="255" />
        <field name="message" type="text" />
        <field name="time" type="integer" />
        <field name="isDeleted" type="integer" />
        <field name="isDisabled" type="integer" />
    </entity>

</doctrine-mapping>